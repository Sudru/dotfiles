

#colors
RED='\e[31;1m'
ORANGE='\e[33;1m'
BLUE='\033[01;34m'
WHITE='\033[0;37m'
DASH='\342\224\200'
function git_branch(){

	local BRANCH=$(git branch 2>/dev/null| grep "*" | awk '{print $2}')
	if [ ! "$BRANCH" == "" ]
	then
		echo -e "─[ $ORANGE$BRANCH$RED ]"
	else
		echo ""
	fi		
}






